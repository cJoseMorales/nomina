@model nomina.Entities.Transaccion

@{
    ViewData["Title"] = "Detalles de la Transacción";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-4">Detalles de la Transacción</h2>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-semibold text-muted">
                    Empleado
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Empleado!.Nombre)
                </dd>

                <dt class="col-sm-3 fw-semibold text-muted">
                    Tipo de Transacción
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TipoDeTransaccion!.Nombre)
                </dd>

                <dt class="col-sm-3 fw-semibold text-muted">
                    @Html.DisplayNameFor(model => model.Fecha)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Fecha)
                </dd>

                <dt class="col-sm-3 fw-semibold text-muted">
                    @Html.DisplayNameFor(model => model.Monto)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Monto)
                </dd>

                <dt class="col-sm-3 fw-semibold text-muted">
                    @Html.DisplayNameFor(model => model.IdAsiento)
                </dt>
                <dd class="col-sm-9">
                    @(Model.IdAsiento == null ? "No definido" : Model.IdAsiento)
                </dd>

                <dt class="col-sm-3 fw-semibold text-muted">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Estado)
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver
        </a>
    </div>
</div>
