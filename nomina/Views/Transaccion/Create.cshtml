@model nomina.Entities.Transaccion

@{
    ViewData["Title"] = "Crear Transacci贸n";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-4">Crear Transacci贸n</h2>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Empleado -->
                <div class="mb-3">
                    <label asp-for="Empleado" class="form-label">Empleado</label>
                    <select asp-for="Empleado" class="form-select" asp-items="ViewBag.Empleados">
                        <option value="">Seleccione un empleado</option>
                    </select>
                    <span asp-validation-for="Empleado" class="text-danger"></span>
                </div>

                <!-- Tipo de Transacci贸n -->
                <div class="mb-3">
                    <label asp-for="Tipo" class="form-label">Tipo de Transacci贸n</label>
                    <select asp-for="Tipo" class="form-select" asp-items="ViewBag.TiposTransaccion">
                        <option value="">Seleccione un tipo</option>
                    </select>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>

                <!-- Fecha -->
                <div class="mb-3">
                    <label asp-for="Fecha" class="form-label">Fecha</label>
                    <input asp-for="Fecha" type="date" class="form-control" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>

                <!-- Monto -->
                <div class="mb-3">
                    <label asp-for="Monto" class="form-label">Monto</label>
                    <input asp-for="Monto" class="form-control" />
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>

                <!-- Estado -->
                <div class="mb-3">
                    <label asp-for="Estado" class="form-label">Estado</label>
                    <select asp-for="Estado" class="form-select">
                        <option value="ACTIVO">ACTIVO</option>
                        <option value="INACTIVO">INACTIVO</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <!-- Botones -->
                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Crear
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
