@model nomina.Entities.Transaccion

@{
    ViewData["Title"] = "Eliminar Transacción";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="fw-bold text-danger mb-4">¿Estás seguro de eliminar esta transacción?</h2>

    <div class="card shadow-sm rounded-3 mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-semibold text-muted">
                    Empleado
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Empleado!.Nombre)
                </dd>

                <dt class="col-sm-3 fw-semibold text-muted">
                    Tipo de Transacción
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TipoDeTransaccion!.Nombre)
                </dd>

                <dt class="col-sm-3 fw-semibold text-muted">
                    @Html.DisplayNameFor(model => model.Fecha)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Fecha)
                </dd>

                <dt class="col-sm-3 fw-semibold text-muted">
                    @Html.DisplayNameFor(model => model.Monto)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Monto)
                </dd>

                <dt class="col-sm-3 fw-semibold text-muted">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Estado)
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Cancelar
            </a>
        </div>
    </form>
</div>
