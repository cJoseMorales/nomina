<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nomina</title>

    <!-- Google Fonts (opcional para una mejor estética) -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/nomina.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        .navbar-brand {
            font-weight: 600;
            font-size: 1.25rem;
            background-color: wheat;
        }
        footer.footer {
            background-color: wheat;
            padding: 1rem 0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg border-bottom shadow-sm sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door me-2"></i> Nomina
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> Página Principal</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Puesto" asp-action="Index"><i class="bi bi-person-badge"></i> Puestos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Departamento" asp-action="Index"><i class="bi bi-diagram-3"></i> Departamentos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Empleado" asp-action="Index"><i class="bi bi-people"></i> Empleados</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="TipoDeTransaccion" asp-action="Index"><i class="bi bi-tags"></i> Tipos de Transacción</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Transaccion" asp-action="Index"><i class="bi bi-currency-exchange"></i> Transacciones</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AsientoContable" asp-action="Index"><i class="bi bi-journal-text"></i> Asientos Contables</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top text-muted text-center">
        <div class="container">
            &copy; 2025 - Nomina - <a asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>

    <!-- JS scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
