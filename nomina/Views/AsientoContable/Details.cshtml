@model nomina.Entities.AsientoContable

@{
    ViewData["Title"] = "Editar Tipo de Transacción";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-4">
        <i class="bi bi-pencil-square me-2"></i> Detalles del Asiento Contable
    </h2>

    <div class="card shadow-sm rounded-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-semibold">Descripción</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

                <dt class="col-sm-3 fw-semibold">Período</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Periodo)</dd>

                <dt class="col-sm-3 fw-semibold">Monto</dt>
                <dd class="col-sm-9">@($"{Model.Monto:C}")</dd>

                <dt class="col-sm-3 fw-semibold">Estado</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</div>