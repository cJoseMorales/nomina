@model nomina.Entities.TipoDeTransaccion

@{
    ViewData["Title"] = "Editar Tipo de Transacción";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-4">
        <i class="bi bi-pencil-square me-2"></i> Editar Tipo de Transacción
    </h2>

    <div class="card shadow-sm rounded-4">
        <div class="card-body">
            <form asp-action="Edit" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label fw-semibold">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Operacion" class="form-label fw-semibold">Operación</label>
                    <select asp-for="Operacion" class="form-select">
                        <option value="INGRESO" selected="@("INGRESO" == Model.Operacion)">INGRESO</option>
                        <option value="DEDUCCION" selected="@("DEDUCCION" == Model.Operacion)">DEDUCCIÓN</option>
                    </select>
                    <span asp-validation-for="Operacion" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="DependeDeSalario" />
                    <label class="form-check-label fw-semibold" asp-for="DependeDeSalario">
                        Depende del Salario
                    </label>
                </div>

                <div class="mb-3">
                    <label asp-for="Estado" class="form-label fw-semibold">Estado</label>
                    <select asp-for="Estado" class="form-select">
                        <option value="ACTIVO" selected="@("ACTIVO" == Model.Estado)">ACTIVO</option>
                        <option value="INACTIVO" selected="@("INACTIVO" == Model.Estado)">INACTIVO</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
