@model nomina.Entities.AsientoContable

@{
    ViewData["Title"] = "Crear Asiento Contable";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-4">
        <i class="bi bi-journal-plus me-2"></i> Crear Asiento Contable
    </h2>

    <div class="card shadow-sm rounded-4">
        <div class="card-body">
            <form asp-action="Create" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label fw-semibold">Descripci�n</label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Ej: Pago de n�mina mensual"/>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Cuenta" class="form-label fw-semibold">Cuenta</label>
                    <input asp-for="Cuenta" class="form-control" placeholder="Ej: 1101 - Banco Nacional"/>
                    <span asp-validation-for="Cuenta" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TipoDeMovimiento" class="form-label fw-semibold">Tipo de Movimiento</label>
                    <select asp-for="TipoDeMovimiento" class="form-select">
                        <option value="DEBITO">DÉBITO</option>
                        <option value="CREDITO">CRÉDITO</option>
                    </select>
                    <span asp-validation-for="TipoDeMovimiento" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Periodo" class="form-label fw-semibold">Periodo</label>
                    <input asp-for="Periodo" class="form-control" placeholder="Ej: 2024-12"/>
                    <span asp-validation-for="Periodo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Monto" class="form-label fw-semibold">Monto</label>
                    <input asp-for="Monto" class="form-control" placeholder="Ej: 12500.00"/>
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Estado" class="form-label fw-semibold">Estado</label>
                    <select asp-for="Estado" class="form-select">
                        <option value="ACTIVO">ACTIVO</option>
                        <option value="INACTIVO">INACTIVO</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Crear
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
