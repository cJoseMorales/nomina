@model nomina.Entities.Empleado

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles del Empleado</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Cédula
        </dt>
        <dd class = "col-sm-10">
            Cédula
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Departamento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Departamento!.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Puesto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Puesto!.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Salario Mensual
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SalarioMensual)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Volver</a>
</div>