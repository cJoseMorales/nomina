@model nomina.Entities.Empleado

@{
    ViewData["Title"] = "Crear Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-4">
        <i class="bi bi-person-plus-fill me-2"></i> Crear Empleado
    </h2>

    <div class="card shadow-sm rounded-4">
        <div class="card-body">
            <form asp-action="Create" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Cedula" class="form-label fw-semibold">Cédula</label>
                    <input asp-for="Cedula" class="form-control" placeholder="Ej: 001-0000000-0"/>
                    <span asp-validation-for="Cedula" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label fw-semibold">Nombre</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre completo del empleado"/>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DepartamentoId" class="form-label fw-semibold">Departamento</label>
                    <select asp-for="DepartamentoId" class="form-select" asp-items="ViewBag.Departamentos">
                        <option value="">Seleccione una opción</option>
                    </select>
                    <span asp-validation-for="DepartamentoId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PuestoId" class="form-label fw-semibold">Puesto</label>
                    <select asp-for="PuestoId" class="form-select" asp-items="ViewBag.Puestos">
                        <option value="">Seleccione una opción</option>
                    </select>
                    <span asp-validation-for="PuestoId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SalarioMensual" class="form-label fw-semibold">Salario Mensual</label>
                    <input asp-for="SalarioMensual" class="form-control" placeholder="Ej: 35000.00"/>
                    <span asp-validation-for="SalarioMensual" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Crear
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
