@{
    ViewData["Title"] = "Página Principal";
}

<div class="container mt-5">
    <h1 class="text-center mb-5 display-5 fw-bold">Administración del Sistema</h1>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Tarjeta: Puestos -->
        <div class="col">
            <div class="card h-100 border-0 shadow-lg rounded-4">
                <div class="card-body text-center">
                    <i class="bi bi-person-badge fs-1 text-primary mb-3"></i>
                    <h5 class="card-title fw-bold">Puestos</h5>
                    <p class="card-text">Gestiona los puestos de trabajo de la empresa.</p>
                    <a asp-controller="Puesto" asp-action="Index" class="btn btn-outline-primary w-100">Administrar</a>
                </div>
            </div>
        </div>

        <!-- Tarjeta: Departamentos -->
        <div class="col">
            <div class="card h-100 border-0 shadow-lg rounded-4">
                <div class="card-body text-center">
                    <i class="bi bi-diagram-3 fs-1 text-success mb-3"></i>
                    <h5 class="card-title fw-bold">Departamentos</h5>
                    <p class="card-text">Administra los departamentos de la empresa.</p>
                    <a asp-controller="Departamento" asp-action="Index" class="btn btn-outline-success w-100">Administrar</a>
                </div>
            </div>
        </div>

        <!-- Tarjeta: Empleados -->
        <div class="col">
            <div class="card h-100 border-0 shadow-lg rounded-4">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill fs-1 text-warning mb-3"></i>
                    <h5 class="card-title fw-bold">Empleados</h5>
                    <p class="card-text">Gestiona los empleados registrados.</p>
                    <a asp-controller="Empleado" asp-action="Index" class="btn btn-outline-warning w-100">Administrar</a>
                </div>
            </div>
        </div>

        <!-- Tarjeta: Tipos de Transacción -->
        <div class="col">
            <div class="card h-100 border-0 shadow-lg rounded-4">
                <div class="card-body text-center">
                    <i class="bi bi-tags fs-1 text-danger mb-3"></i>
                    <h5 class="card-title fw-bold">Tipos de Transacción</h5>
                    <p class="card-text">Administra los diferentes tipos de transacciones.</p>
                    <a asp-controller="TipoDeTransaccion" asp-action="Index" class="btn btn-outline-danger w-100">Administrar</a>
                </div>
            </div>
        </div>

        <!-- Tarjeta: Transacciones -->
        <div class="col">
            <div class="card h-100 border-0 shadow-lg rounded-4">
                <div class="card-body text-center">
                    <i class="bi bi-currency-exchange fs-1 text-info mb-3"></i>
                    <h5 class="card-title fw-bold">Transacciones</h5>
                    <p class="card-text">Consulta y administra las transacciones realizadas.</p>
                    <a asp-controller="Transaccion" asp-action="Index" class="btn btn-outline-info w-100">Administrar</a>
                </div>
            </div>
        </div>

        <!-- Tarjeta: Asientos Contables -->
        <div class="col">
            <div class="card h-100 border-0 shadow-lg rounded-4">
                <div class="card-body text-center">
                    <i class="bi bi-journal-text fs-1 text-secondary mb-3"></i>
                    <h5 class="card-title fw-bold">Asientos Contables</h5>
                    <p class="card-text">Gestiona los asientos contables registrados.</p>
                    <a asp-controller="AsientoContable" asp-action="Index" class="btn btn-outline-secondary w-100">Administrar</a>
                </div>
            </div>
        </div>
    </div>
</div>
