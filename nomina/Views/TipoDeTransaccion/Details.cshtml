@model nomina.Entities.TipoDeTransaccion

@{
    ViewData["Title"] = "Detalles del Tipo de Transacción";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-4">
        <i class="bi bi-info-circle me-2"></i> Detalles del Tipo de Transacción
    </h2>

    <div class="card shadow-sm rounded-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-semibold">Nombre</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3 fw-semibold">Operación</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Operacion)</dd>

                <dt class="col-sm-3 fw-semibold">Depende del Salario</dt>
                <dd class="col-sm-9">
                    @(Model.DependeDeSalario ? "Sí" : "No")
                </dd>

                <dt class="col-sm-3 fw-semibold">Estado</dt>
                <dd class="col-sm-9">
                    @if (Model.Estado == "Activo")
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
    </div>
</div>
